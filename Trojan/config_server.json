{
    "log": {
        "level": "info",
        "timestamp": true
    },
    "route": {
        "rules": [
            {
                "network": "udp",
                "port": [
                    443
                ],
                "outbound": "block"
            },
            {
                "geoip": [
                    "cn",
                    "private"
                ],
                "outbound": "block"
            }
        ]
    },
