{
    "log": {
        "level": "info"
    },
    "dns": {
        "servers": [
            {
                "address": "1.1.1.1"
            }
        ]
    },
    "inbounds": [
        {
            "type": "hysteria",
            "tag": "hysteria-in",
            "listen": "::",
            "listen_port": 16384,
            "sniff": true,
            "sniff_override_destination": true,
            "domain_strategy": "ipv4_only",
            "up_mbps": 1000,
            "down_mbps": 1000,
            "auth_str": "chika",
            "recv_window_conn": 67108864,
            "recv_window_client": 268435456,
            "max_conn_client": 4096,
            "disable_mtu_discovery": false,
            "tls": {
                "enabled": true,
                "alpn": [
                    "h3"
                ],
                "certificate_path": "/root/fullchain.cer",
                "key_path": "/root/private.key"
            }
        }
    ],
    "outbounds": [
        {
            "type": "direct",
            "tag": "direct"
        },
        {
            "type": "block",
            "tag": "block"
        }
    ],
    "route": {
        "geoip": {
            "path": "geoip.db",
            "download_url": "https://github.com/SagerNet/sing-geoip/releases/latest/download/geoip.db"
        },
        "rules": [
            {
                "geoip": [
                    "cn"
                ],
                "outbound": "block"
            }
        ]
    }
}
